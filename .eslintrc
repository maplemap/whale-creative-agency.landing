extends:
  eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  indent: 2
  comma-dangle: 0
  react/jsx-filename-extension: ["error", { "extensions": [".js", ".jsx"] }]
  react/prefer-stateless-function: 0
  react/prop-types: 0
